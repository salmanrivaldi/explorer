{
  "name": "windows-explorer",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"bun run dev:backend\" \"bun run dev:frontend\"",
    "dev:backend": "bun --watch run apps/backend/main.ts",
    "dev:frontend": "bun run --cwd apps/frontend dev",
    "build": "bun run build:frontend && bun run build:backend",
    "build:frontend": "bun run --cwd apps/frontend build",
    "build:backend": "echo \"No backend build step (TypeScript runs directly)\"",
    "start": "concurrently \"bun run start:backend\" \"bun run start:frontend\"",
    "start:backend": "bun run apps/backend/main.ts",
    "start:frontend": "bun run --cwd apps/frontend start",
    "seed": "bun run packages/db/seed.ts",
    "migrate": "bunx prisma migrate dev --schema packages/db/prisma/schema.prisma --name init",
    "generate": "bunx prisma generate --schema packages/db/prisma/schema.prisma"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "bun-types": "^1.2.20",
    "prisma": "^6.14.0",
    "concurrently": "^9.0.0"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.3",
    "@heroicons/vue": "^2.2.0",
    "@pinia/nuxt": "^0.11.2",
    "@prisma/client": "^6.14.0",
    "@types/crypto-js": "^4.2.2",
    "crypto-js": "^4.2.0",
    "elysia": "^1.3.12",
    "valibot": "^1.1.0"
  }
}